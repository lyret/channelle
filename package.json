{
	"name": "channelle",
	"description": "A multimedia communication application for online theater",
	"version": "1.0.0",
	"author": "Viktor Lyresten <viktor@lyresten.se>",
	"license": "CC-BY-NC/4.0",
	"scripts": {
		"stage:production:build": "node cli.mjs --production --no-start --build --no-watch --no-debug",
		"stage:production:start": "node cli.mjs --production --start --no-build --no-watch --no-debug",
		"stage:dev": "node cli.mjs --build --watch --start --no-production --debug localhost --local --lan --port 3000",
		"stage:build": "node cli.mjs --no-production --no-start --build --no-watch --no-debug",
		"stage:start": "node cli.mjs --no-production --start --no-build --no-watch --no-debug",
		"stage:debug": "node cli.mjs --no-production --start --no-build --no-watch --debug",
		"theater:dev": "node cli.mjs --theater --build --watch --start --no-production --debug",
		"theater:build": "node cli.mjs --theater --no-production --no-start --build --no-watch --no-debug",
		"theater:start": "node cli.mjs --theater --no-production --start --no-build --no-watch --no-debug",
		"theater:production:build": "node cli.mjs --theater --production --no-start --build --no-watch --no-debug",
		"theater:production:start": "node cli.mjs --theater --production --start --no-build --no-watch --no-debug",
		"clean": "rm -r .dist",
		"clean:all": "rm -r .dist && rm -r node_modules",
		"lint": "eslint && svelte-check --tsconfig ./tsconfig.json && eslint",
		"lint:code": "eslint",
		"lint:svelte": "svelte-check --tsconfig ./tsconfig.json && eslint",
		"tools:format": "eslint --fix"
	},
	"engines": {
		"node": ">21.0.0",
		"npm": ">10.0.0"
	},
	"dependencies": {
		"@trpc/client": "^11.5.1",
		"@trpc/server": "^11.5.1",
		"@types/deep-equal": "^1.0.4",
		"@types/restify": "^8.5.12",
		"broadcast-channel": "^7.0.0",
		"bulma": "^1.0.1",
		"bulma-list": "^2.1.0",
		"canvas-confetti": "^1.9.3",
		"chalk": "^5.3.0",
		"chokidar": "^4.0.1",
		"deep-equal": "^2.2.3",
		"dotenv": "^16.4.5",
		"emittery": "^1.2.0",
		"luxon": "^3.0.0",
		"mediasoup": "^3.14.8",
		"mediasoup-client": "^3.7.12",
		"nopt": "^7.2.1",
		"postcss": "^8.4.24",
		"public-ip": "^6.0.2",
		"restify": "^11.1.0",
		"restify-errors": "^8.0.2",
		"sequelize": "^6.37.7",
		"slug": "^11.0.0",
		"sqlite3": "^5.1.7",
		"svelte": "^4.2.18",
		"svelte-persisted-store": "^0.12.0",
		"universal-router": "^9.0.1",
		"ws": "^8.18.3",
		"zod": "^4.1.5"
	},
	"devDependencies": {
		"@babel/polyfill": "^7.12.1",
		"@chialab/esbuild-plugin-html": "^0.17.2",
		"@eslint/js": "^9.21.0",
		"@stylistic/eslint-plugin": "^4.2.0",
		"@tsconfig/svelte": "^4.0.1",
		"@types/canvas-confetti": "^1.6.4",
		"@types/luxon": "^3.0.1",
		"@types/node": "^18.15.11",
		"@types/nopt": "^3.0.32",
		"@types/ws": "^8.18.1",
		"autoprefixer": "^10.4.14",
		"esbuild": "^0.25.0",
		"esbuild-plugin-copy": "^2.1.1",
		"esbuild-plugin-svg": "^0.1.0",
		"esbuild-sass-plugin": "^3.3.1",
		"esbuild-svelte": "^0.7.3",
		"eslint": "^9.21.0",
		"eslint-plugin-svelte": "^3.0.2",
		"globals": "^16.0.0",
		"sass": "^1.82.0",
		"svelte-check": "^3.4.4",
		"svelte-preprocess": "^5.0.0",
		"tslib": "^2.5.3",
		"typescript": "5.7",
		"typescript-eslint": "^8.26.0"
	}
}
