		"koa-router": "^12.0.0",
		"koa-static": "^5.0.0",
		"luxon": "^3.0.0",
		"mediasoup": "^3.14.8",
		"mediasoup-client": "^3.7.12",
		"nopt": "^7.2.1",
		"postcss": "^8.4.24",
		"prettier": "^3.3.2",
		"prettier-plugin-prisma": "^5.0.0",
		"prettier-plugin-svelte": "^3.2.5",
		"prisma": "^5.15.1",
		"public-ip": "^6.0.2",
		"socket.io": "^4.6.1",
		"socket.io-client": "^4.0.0",
		"svelte": "^4.2.18",
		"svelte-check": "^3.4.4",
		"svelte-preprocess": "^5.0.0",
		"tslib": "^2.5.3",
