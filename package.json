{
	"name": "channelle",
	"description": "A multimedia communication application for online theater",
	"version": "1.0.0",
	"author": "Viktor Lyresten <viktor@lyresten.se>",
	"license": "CC-BY-NC/4.0",
	"scripts": {
		"production:build": "node cli.mjs --production --no-start --build --no-watch --no-debug",
		"production:init": "npx prisma migrate deploy",
		"production:start": "node cli.mjs --production --start --no-build --no-watch --no-debug",
		"dev": "node cli.mjs --build --watch --start --no-production --debug localhost --local --lan --port 3000",
		"dev:build": "node cli.mjs --no-production --no-start --build --no-watch --no-debug",
		"dev:init": "prisma generate",
		"dev:start": "node cli.mjs --no-production --start --no-build --no-watch --no-debug",
		"dev:debug": "node cli.mjs --no-production --start --no-build --no-watch --debug",
		"clean": "rm -r .dist",
		"clean:all": "rm -r .dist && rm -r node_modules",
		"build": "node cli.mjs --build",
		"build:watch": "node cli.mjs --watch",
		"lint": "eslint && svelte-check --tsconfig ./tsconfig.json && eslint",
		"lint:code": "eslint",
		"lint:svelte": "svelte-check --tsconfig ./tsconfig.json && eslint",
		"tools:prisma": "prisma studio",
		"tools:format": "eslint --fix"
	},
	"engines": {
		"node": ">21.0.0",
		"npm": ">10.0.0"
	},
	"prisma": {
		"schema": "database/schema.prisma"
	},
	"dependencies": {
		"broadcast-channel": "^7.0.0",
		"bulma": "^1.0.1",
		"bulma-list": "^2.1.0",
		"canvas-confetti": "^1.9.3",
		"chalk": "^5.3.0",
		"dotenv": "^16.4.5",
		"emittery": "^1.0.0",
		"koa": "^2.13.1",
		"koa-bodyparser": "^4.3.0",
		"koa-router": "^12.0.0",
		"koa-static": "^5.0.0",
		"luxon": "^3.0.0",
		"mediasoup": "^3.14.8",
		"mediasoup-client": "^3.7.12",
		"nopt": "^7.2.1",
		"postcss": "^8.4.24",
		"prisma": "^5.15.1",
		"public-ip": "^6.0.2",
		"socket.io": "^4.6.1",
		"socket.io-client": "^4.0.0",
		"svelte": "^4.2.18",
		"universal-router": "^9.0.1"
	},
	"devDependencies": {
		"@babel/polyfill": "^7.12.1",
		"@chialab/esbuild-plugin-html": "^0.17.2",
		"@eslint/js": "^9.21.0",
		"@prisma/client": "^5.15.1",
		"@stylistic/eslint-plugin": "^4.2.0",
		"@tsconfig/svelte": "^4.0.1",
		"@types/canvas-confetti": "^1.6.4",
		"@types/koa": "^2.11.7",
		"@types/koa-bodyparser": "^4.3.6",
		"@types/koa-router": "^7.4.1",
		"@types/koa-static": "^4.0.1",
		"@types/luxon": "^3.0.1",
		"@types/node": "^18.15.11",
		"@types/nopt": "^3.0.32",
		"autoprefixer": "^10.4.14",
		"esbuild": "^0.25.0",
		"esbuild-plugin-copy": "^2.1.1",
		"esbuild-plugin-svg": "^0.1.0",
		"esbuild-sass-plugin": "^3.3.1",
		"esbuild-svelte": "^0.7.3",
		"eslint": "^9.21.0",
		"eslint-plugin-prisma": "^1.0.1",
		"eslint-plugin-svelte": "^3.0.2",
		"globals": "^16.0.0",
		"sass": "^1.82.0",
		"svelte-check": "^3.4.4",
		"svelte-preprocess": "^5.0.0",
		"tslib": "^2.5.3",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.26.0"
	}
}
