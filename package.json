{
	"name": "channelle",
	"description": "A multimedia communication application for online theater",
	"version": "1.0.0",
	"author": "Viktor Lyresten <viktor@lyresten.se>",
	"license": "CC-BY-NC/4.0",
	"scripts": {
		"production:build": "node cli.mjs --production --no-start --build --no-watch --no-debug",
		"production:init": "npx prisma migrate deploy",
		"production:start": "node cli.mjs --production --start --no-build --no-watch --no-debug",
		"init": "prisma generate",
		"dev": "node cli.mjs --build --watch --start --no-production --debug localhost --local --lan --port 3000",
		"check": "svelte-check --tsconfig ./tsconfig.json && prettier . --check",
		"format": "prettier . --write",
		"build": "node cli.mjs --build",
		"clean": "rm -r .dist",
		"watch": "node cli.mjs --watch",
		"start:server": "node cli.mjs --start --no-debug",
		"start:debug": "node cli.mjs --start --debug",
		"start:studio": "prisma studio"
	},
	"engines": {
		"node": "^21.0.0",
		"npm": "^10.0.0"
	},
	"prisma": {
		"schema": "database/schema.prisma"
	},
	"dependencies": {
		"@babel/polyfill": "^7.12.1",
		"@chialab/esbuild-plugin-html": "^0.17.2",
		"@craftamap/esbuild-plugin-html": "^0.7.0",
		"@prisma/client": "^5.15.1",
		"@tsconfig/svelte": "^4.0.1",
		"@types/canvas-confetti": "^1.6.4",
		"@types/koa": "^2.11.7",
		"@types/koa-bodyparser": "^4.3.6",
		"@types/koa-router": "^7.4.1",
		"@types/koa-static": "^4.0.1",
		"@types/luxon": "^3.0.1",
		"@types/node": "^18.15.11",
		"@types/nopt": "^3.0.32",
		"autoprefixer": "^10.4.14",
		"broadcast-channel": "^7.0.0",
		"bulma": "^1.0.1",
		"bulma-list": "^2.1.0",
		"canvas-confetti": "^1.9.3",
		"chalk": "^5.3.0",
		"dotenv": "^16.4.5",
		"emittery": "^1.0.0",
		"esbuild": "^0.21.5",
		"esbuild-plugin-svg": "^0.1.0",
		"esbuild-sass-plugin": "^3.3.1",
		"esbuild-svelte": "^0.7.3",
		"koa": "^2.13.1",
