{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"lib": ["es2021", "dom"],
		"strict": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"baseUrl": "./stage-interface",
		"typeRoots": ["./node_modules/@types", "./shared/types", "./stage-interface/types"],
		"types": ["node"],
		"paths": {
			"~/*": ["./*"]
		},
		"outDir": "./.dist"
	},
	"include": ["shared/**/*", "stage-interface/types/**/*", "eslint.config.mjs"],
	"exclude": ["node_modules/*", "stage-server/*", ".dist/*", ".vscode/*"]
}
